library(tidyverse)
library(here)

data_csv <- read_delim("data/meie.csv",
                      delim = ";", 
                      escape_double = FALSE, 
                      trim_ws = TRUE, na = "n/a",
                      
                      
                      
                      
                      col_types = cols(local
                      journal
                      cites
                      IF
                      year
                      n_auth
                      foreign_collaboration
                      
                      
                      
                      ))
                                                                                    
data_csv
spec(data_csv)
write_csv(data_csv, here("output", "meie.csv"))

meie <- read_csv(here("output/meie.csv"))
meie
summary(meie)


ggplot(data = meie) +
  geom_point(aes(x = year, y = cites, color = local))+
  facet_wrap(~foreign_collaboration)

ggplot(data = meie) +
  geom_point(aes(x = n_auth, y = cites, color = local))+
  facet_wrap(~foreign_collaboration)
  
    
ggplot(data = meie) +
  geom_point(aes(x = IF, y = cites, color = local))+
  facet_wrap(~foreign_collaboration)

